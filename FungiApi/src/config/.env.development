## Environment ##
NODE_ENV=development

## Server ##
PORT=3000
HOST=localhost

## Setup jet-logger ##
JET_LOGGER_MODE=CONSOLE
JET_LOGGER_FILEPATH=jet-logger.log
JET_LOGGER_TIMESTAMP=TRUE
JET_LOGGER_FORMAT=LINE

# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/fungi-api
# If using MongoDB Atlas, use a connection string like:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/fungi-api?retryWrites=true&w=majority

# API configuration
API_PREFIX=/api

# Logging
LOG_LEVEL=debug

# CORS settings
CORS_ORIGIN=*
